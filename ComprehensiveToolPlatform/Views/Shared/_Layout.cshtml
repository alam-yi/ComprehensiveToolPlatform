@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 综合工具平台</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap-icons-1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ComprehensiveToolPlatform.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        .navbar-nav .dropdown-menu {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .dropdown-toggle::after {
            margin-left: 0.5em;
        }

        ul.dropdown-menu li {
          cursor: pointer;
        }

        .nav-link {
            color: #333;
            transition: color 0.2s;
        }

            .nav-link:hover {
                color: #007bff;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <!-- 左侧 Logo 和标题 -->
                <div class="d-flex align-items-center flex-grow-1">
                    <a href="/home/index">
                        <img src="~/pics/company_logo.png" style="height:60px; margin-left:50px;" />
                    </a>
                    @* <h4 class="mb-0 ms-3" style="line-height:70px;">综合工具平台</h4> *@
                </div>

                <!-- 右侧用户区域 -->
                <div class="d-flex align-items-center" style="margin-right:50px;">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/pics/avatar.png" class="rounded-circle me-2" style="width:35px; height:35px;">
                            <span>@(User.FindFirst(ClaimTypes.NameIdentifier)?.Value)[@(User.FindFirst(ClaimTypes.Name)?.Value)]</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item"><i class="bi bi-person me-2"></i>个人中心</a></li>
                            @if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == "admin")
                            {
                                <li><a class="dropdown-item" href="/Account/CategorySetting"><i class="bi bi-gear me-2"></i>类别配置</a></li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" onclick="handleLoginOut()">
                                    <i class="bi bi-box-arrow-right me-2"></i>退出登录
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    @* <div class="container">
    <main role="main" class="pb-3"> *@
    @RenderBody()

    @Html.Partial("_GlobalUIComponents")
    @*  </main>
    </div> *@

    <footer class="border-top footer text-muted">
        <div class="container" style="color:gray;">
            Copyright @DateTime.Now.Year.ToString() © 湖北三赢兴光电科技股份有限公司 - 信息系统部
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function handleLoginOut() {
            $.ajax({
                url: '@Url.Action("Logout", "Account")',
                type: 'GET',
                beforeSend: function () {
                    showLoading();
                },
                success: function (res) {
                    hideLoading();
                    if (res.code == 200) {
                        // 跳转页面
                        window.location.href = '@Url.Action("Login", "Account")';
                    }
                },
                error: function (xhr, status, error) {
                    hideLoading();
                    bsConfirm('系统异常' + error);
                }
            });
        }
    </script>

</body>
</html>
